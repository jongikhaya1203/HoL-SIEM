# Network Security Scanner - Environment Configuration
# Copy this file to .env and update with your settings

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=network_security_scanner
DB_USER=root
DB_PASS=

# Application Settings
APP_NAME="Network Security Scanner"
APP_ENV=production
APP_DEBUG=false

# Scan Settings
SCAN_TIMEOUT=2
MAX_SCAN_HOSTS=255
DEFAULT_SCAN_TYPE=full

# Security Settings
ENABLE_API=true
API_KEY=
REQUIRE_AUTH=false

# Reporting
REPORTS_PATH=/reports
REPORT_RETENTION_DAYS=90

# Compliance
ENABLE_COMPLIANCE_CHECKS=true
DEFAULT_FRAMEWORKS=NIST,ISO27001,CIS

# Logging
LOG_LEVEL=info
LOG_PATH=/logs
ENABLE_AUDIT_LOG=true

# Email Notifications (optional)
ENABLE_EMAIL_ALERTS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL=
